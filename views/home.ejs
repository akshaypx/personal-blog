<% var articles=getArticlesList() %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>
  </head>
  <body>
    <h1>Personal Blog</h1>
    <div style="display: flex; flex-direction: column; gap: 2">
        <% for(var i=0; i<articles.length; i++){%>
      <div style="display: flex; justify-content: space-between; cursor: pointer;" onclick="myFunction('<%=articles[i].id%>')">
        <h3><%= articles[i].title %></h3>
        <p><%= articles[i].date %></p>
      </div>
      <%} %>
    </div>
    <script>
        function myFunction(id){
            window.location.href="http://www.localhost:8000/article/"+id;
        }
    </script>
  </body>
</html>
