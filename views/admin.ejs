<% var articles=getArticlesList() %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Portal</title>
  </head>
  <body>
    <h1>Personal Blog</h1>
    <div style="display: flex; flex-direction: column; gap: 4px">
      <% for(var i = 0; i < articles.length; i++) { %>
      <div
        style="
          display: flex;
          justify-content: space-between;
          padding: 10px;
          background-color: lightgray;
          border-radius: 10px;
        "
      >
        <h3><%= articles[i].title %></h3>
        <div style="display: flex; gap: 10px">
          <p
            onclick="handleEdit('<%= articles[i].id %>')"
            style="
              cursor: pointer;
              background-color: darkorange;
              color: white;
              border-radius: 10px;
              padding: 10px;
            "
          >
            Edit
          </p>
          <p
            onclick="handleDelete('<%= articles[i].id %>')"
            style="
              cursor: pointer;
              background-color: red;
              color: white;
              border-radius: 10px;
              padding: 10px;
            "
          >
            Delete
          </p>
        </div>
      </div>
      <% } %>
    </div>
    <script>
      function handleEdit(id) {
        window.location.href = "http://localhost:8000/edit/" + id;
      }
      function handleDelete(id) {
        window.location.href = "http://localhost:8000/delete/" + id;
      }
    </script>
  </body>
</html>
